<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Forager ðŸŒ¿</title>
    <link rel="stylesheet" type="text/css" href="/css/normalize.css">
    <link rel="stylesheet" type="text/css" href="/css/style.css">
</head>
<body>
    <div class="overview-body">
        <div class="overview-main-container-wrapper">
            <div class="discovery-count"">You've discovered <%= plants.length %> plants! Good job!</div>
            <% plants.forEach( plant => { %>
                <div class="overview-plant">
                    <% if (plant.commonName) { %><h2><%= plant.commonName %></h2><% } %>
                    <h3><%= plant.scientificName %></h3>
                    <div class="overview-description"><%= plant.description %></div>
                    <img src="<%= plant.wikiPic %>" alt="">
                    <a href="/id/loadPlant/<%= plant._id %>" class="view-details">View Details</a>
                </div>
            <% }) %>
        </div>
        <div class="bottom-nav-wrapper">
            <div class="bottom-nav">
                <a href="/id">ID Plant</a>
                <a href="/plants">My Map</a>
                <a href="/logout">Logout</a>
            </div>
        </div> 
    </div> 
    
   

</body>
</html>